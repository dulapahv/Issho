generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Calendar {
  id        String   @id // Shorter custom ID
  name      String   @default("Untitled Calendar") @db.VarChar(128)
  pinHash   String // Hashed PIN using bcrypt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]

  @@index([pinHash])
}

model Event {
  id         String   @id @default(cuid())
  calendarId String
  calendar   Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  title      String   @default("Untitled Event") @db.VarChar(128)
  start      DateTime
  end        DateTime
  color      String // Generated from title
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([calendarId])
}
